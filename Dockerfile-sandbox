ARG sdk_vsn=0.13.42

FROM digitalasset/daml-sdk:${sdk_vsn}

WORKDIR /home/daml

COPY target/healthcare-claims-processing.dar /home/daml/

USER root
RUN chown daml healthcare-claims-processing.dar
USER daml

EXPOSE 6865

CMD ~/.daml/bin/daml sandbox -- --address 0.0.0.0 --port 6865 --scenario DemoOnboardScenario.InsurancePolicies:insurancePoliciesSetSingle healthcare-claims-processing.dar
